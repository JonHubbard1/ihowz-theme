{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "ihowz/features-banner",
    "version": "1.0.1",
    "title": "Features Banner",
    "category": "ihowz-blocks",
    "icon": "layout",
    "description": "A banner section with eyebrow text, heading, featured image card, and feature cards.",
    "keywords": ["features", "banner", "cards", "services"],
    "textdomain": "ihowz-theme",
    "attributes": {
        "eyebrowText": {
            "type": "string",
            "default": ""
        },
        "heading": {
            "type": "string",
            "default": ""
        },
        "imageCardTitle": {
            "type": "string",
            "default": ""
        },
        "imageCardSubtitle": {
            "type": "string",
            "default": ""
        },
        "imageCardTitlePosition": {
            "type": "string",
            "default": "top",
            "enum": ["top", "bottom"]
        },
        "imageId": {
            "type": "number",
            "default": 0
        },
        "imageUrl": {
            "type": "string",
            "default": ""
        },
        "imageMinHeight": {
            "type": "number",
            "default": 400
        },
        "imageAlignment": {
            "type": "string",
            "default": "center",
            "enum": ["top", "center", "bottom"]
        },
        "features": {
            "type": "array",
            "default": []
        },
        "backgroundColor": {
            "type": "string",
            "default": "#f5f5f5"
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "render": "file:./render.php"
}
