{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "ihowz/feedback",
    "version": "2.0.0",
    "title": "Feedback / Testimonials",
    "category": "ihowz-blocks",
    "icon": "format-quote",
    "description": "A testimonials section with heading, CTA button, and randomly selected customer feedback cards from the database.",
    "keywords": ["feedback", "testimonials", "quotes", "reviews", "customers"],
    "textdomain": "ihowz-theme",
    "attributes": {
        "eyebrowText": {
            "type": "string",
            "default": ""
        },
        "heading": {
            "type": "string",
            "default": ""
        },
        "showButton": {
            "type": "boolean",
            "default": false
        },
        "buttonText": {
            "type": "string",
            "default": ""
        },
        "buttonUrl": {
            "type": "string",
            "default": ""
        },
        "displayRows": {
            "type": "string",
            "default": "2",
            "enum": ["1", "2"]
        },
        "testimonials": {
            "type": "array",
            "default": []
        }
    },
    "supports": {
        "inserter": true,
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "editorStyle": "ihowz-feedback-style",
    "style": "ihowz-feedback-style",
    "render": "file:./render.php"
}
